{
    "name": "project-app-devcontainer",
    "build": {
        "dockerfile": "./docker/Dockerfile",
        "context": "."
    },
    "workspaceFolder": "/var/app",
    "workspaceMount": "source=${localWorkspaceFolder},target=/var/app,type=bind,consistency=cached",
    "remoteUser": "app",
    "containerEnv": {
        "BASH_ENV": "/etc/profile"
    },
    "mounts": [
        "source=rustup-cache,target=/usr/local/rustup,type=volume",
        "source=cargo-registry,target=/usr/local/cargo/registry,type=volume",
        "source=cargo-git,target=/usr/local/cargo/git,type=volume"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "rust-lang.rust-analyzer",
                "tamasfe.even-better-toml",
                "vadimcn.vscode-lldb",
                "ms-vscode.makefile-tools",
                "editorconfig.editorconfig"
            ],
            "settings": {
                "editor.formatOnSave": true,
                "editor.inlayHints.enabled": "off",
                "files.watcherExclude": {
                    "**/target/**": true
                },
                "rust-analyzer.cargo.buildScripts.enable": false,
                "rust-analyzer.procMacro.enable": false,
                "rust-analyzer.cargo.allFeatures": false,
                "rust-analyzer.files.watcher": "client"
            }
        }
    },
    "runArgs": [
        "--rm"
    ],
    "postCreateCommand": "rustup component add rustfmt clippy && chmod +x /var/app/run.sh || true"
}
